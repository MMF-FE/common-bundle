{
    "name": "common-bundle",
    "version": "1.0.1",
    "description": "项目通用依赖包",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "lerna run build",
        "test": "lerna run test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MMF-FE/common-bundle.git"
    },
    "author": "Allenice",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/MMF-FE/common-bundle/issues"
    },
    "homepage": "https://github.com/MMF-FE/common-bundle#readme",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "concurrent": false,
        "linters": {
            "refactor/**/*.{ts,js,json}": "prettier --write",
            "*": "git add"
        }
    },
    "dependencies": {},
    "devDependencies": {
        "husky": "^2.3.0",
        "lerna": "^3.15.0",
        "lint-staged": "^8.1.7",
        "prettier": "^1.17.1"
    }
}
